<div>
  <div>
    <h2>
      Edit event
    </h2>

    <form action="/modify_event/<%= @the_event.id %>"  method="post" >
      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" class="form-control" id="location_box" name="query_location" value="<%= @the_event.location %>">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="datetime-local" class="form-control" id="date_box" name="query_date" value="<%= @the_event.date %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" class="form-control" name="query_description"><%= @the_event.description %></textarea>
      </div>

      <button>
        Update event
      </button>
    </form>
  </div>
</div>

<hr> 

<div>
  <a href="/delete_event/<%= @the_event.id %>" class="btn btn-danger">
    Delete event
  </a>
</div>
